<mvc:View
    controllerName="com.ibm.assesment.orderdetails.controller.DetailPage"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
>
    <Page
        id="detailPage"
        class="customPage"
    >
        <customHeader>
            <Bar>
                <contentLeft>
                    <!-- Home button added here -->
                    <Button icon="sap-icon://home" press="onPressHome" />
                </contentLeft>
                <contentMiddle>
                    <Title
                        text="{i18n>MarketDashboard}"
                        class="centeredTitle"
                    />
                </contentMiddle>
            </Bar>
        </customHeader>
        <content>
            <Button
                text="{i18n>CreateOrder}"
                class="create_order_btn"
                press="createOrder"
            />
            <TabContainer class="detail_page_tab_cont" id="detailpage_tab_cont">
                <items>
                    <TabContainerItem name="{i18n>All}" key="All"></TabContainerItem>
                    <TabContainerItem name="{i18n>Completed}" key="Completed"></TabContainerItem>
                    <TabContainerItem name="{i18n>Inprogress}" key="Inprogress"></TabContainerItem>
                    <TabContainerItem name="{i18n>Blocked}" key="Blocked"></TabContainerItem>
                </items>
            </TabContainer>
            <Table
                id="salesOrderTable"
                inset="false"
                visible="{viewModel>/isSales}"
                items="{mainModel>/SalesOrder}"
            >
                <columns>
                    <Column width="12em">
                        <Text text="{i18n>Id}" />
                    </Column>
                    <Column>
                        <Text text="{i18n>SalesOrderNumber}" />
                    </Column>
                    <Column>
                        <Text text="{i18n>SalesOrderType}" />
                    </Column>
                    <Column>
                        <Text text="{i18n>Company}" />
                    </Column>
                    <Column>
                        <Text text="{i18n>Status}" />
                    </Column>
                    <Column>
                        <Text text="{i18n>Actions}" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem vAlign="Middle">
                        <cells>
                            <Text text="{mainModel>id}" />
                            <Text text="{mainModel>salesOrderNumber}" />
                            <Text text="{mainModel>salesOrderType}" />
                            <Text text="{mainModel>company}" />
                            <Text text="{mainModel>status}" />
                            <VBox class="edit_del_btns">
                                <Button text="Edit" />
                                <Button
                                    text="{i18n>Delete}"
                                    press="onDelete"
                                />
                            </VBox>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
            <Table
                id="purchaseOrderTable"
                inset="false"
                visible="{= ${viewModel>/isSales} === false}"
                items="{mainModel>/PurchaseOrder}"
            >
                <columns>
                    <Column width="12em">
                        <Text text="Id" />
                    </Column>
                    <Column>
                        <Text text="{i18n>PurchaseOrderNumber}" />
                    </Column>
                    <Column>
                        <Text text="{i18n>PurchaseOrderType}" />
                    </Column>
                    <Column>
                        <Text text="{i18n>Company}" />
                    </Column>
                    <Column>
                        <Text text="{i18n>Status}" />
                    </Column>
                    <Column>
                        <Text text="{i18n>Actions}" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem vAlign="Middle">
                        <cells>
                            <Text text="{mainModel>id}" />
                            <Text text="{mainModel>purchaseOrderNumber}" />
                            <Text text="{mainModel>purchaseOrderType}" />
                            <Text text="{mainModel>company}" />
                            <Text text="{mainModel>status}" />
                            <VBox class="edit_del_btns">
                                <Button text="Edit" />
                                <Button
                                    text="Delete"
                                    press="onDelete"
                                />
                            </VBox>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
            <Dialog
                title="Create Item"
                id="createDialog"
                class="create_dialog"
            >
                <VBox class="create_dialog_input_fields">
                    <Label text="Id" />
                    <Input
                        placeholder="Enter Sales Order Number"
                        id="id_"
                    />
                    <Label text="Sales Order Number" />
                    <Input
                        placeholder="Enter Sales Order Number"
                        id="input1"
                    />
                    <Label text="Sales Order Type" />
                    <Input
                        placeholder="Enter Sales Order Type"
                        id="input2"
                    />
                    <Label text="Company" />
                    <Input
                        placeholder="Enter Company"
                        id="input3"
                    />
                    <Label text="Status" />
                    <Input
                        placeholder="Enter Status"
                        id="input4"
                    />
                    <VBox class="dialog_btns">
                        <Button
                            text="Submit"
                            press="onSubmit"
                        />
                        <Button
                            text="Cancel"
                            press="onCancel"
                        />
                    </VBox>
                </VBox>
            </Dialog>
        </content>
    </Page>
</mvc:View>