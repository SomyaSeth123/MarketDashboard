<mvc:View
    controllerName="com.ibm.assesment.orderdetails.controller.Home"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
>
    <Page
        id="page"
        class="customPage"
    >
        <customHeader>
            <Bar>
                <contentMiddle>
                    <Title
                        text="{i18n>MarketDashboardText}"
                        class="centeredTitle"
                    />
                </contentMiddle>
            </Bar>
        </customHeader>
        <content>
            <FlexBox class="flexbox_content">
                <items>
                    <VBox
                        width="70%"
                        height="100%"
                        class="alert_box"
                    >
                        <TabContainer
                            id="myTabContainer"
                            class="tab_cont"
                        >
                            <items>
                                <TabContainerItem
                                    name="{i18n>SalesOrder}"
                                    class="sales_order"
                                >
                                    <content>
                                        <FlexBox
                                            class="sales_order_content"
                                            id="sales_order"
                                        >
                                            <items>
                                                <GenericTile
                                                    class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
                                                    header="{i18n>Completed}"
                                                    press="onClickTile($event, 'sales', 'Completed')"
                                                    frameType="OneByHalf"
                                                >
                                                    <TileContent
                                                        footer="{i18n>Total-10}"
                                                    />
                                                </GenericTile>
                                                <GenericTile
                                                    class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
                                                    header="{i18n>Inprogress}"
                                                    press="onClickTile($event, 'sales', 'Inprogress')"
                                                    frameType="OneByHalf"
                                                >
                                                    <TileContent
                                                        footer="{i18n>Total-20}"
                                                    />
                                                </GenericTile>
                                                <GenericTile
                                                    class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
                                                    header="{i18n>Blocked}"
                                                    press="onClickTile($event, 'sales', 'Blocked')"
                                                    frameType="OneByHalf"
                                                >
                                                    <TileContent
                                                        footer="{i18n>Total-30}"
                                                    />
                                                </GenericTile>
                                            </items>
                                        </FlexBox>
                                    </content>
                                </TabContainerItem>
                                <TabContainerItem
                                    name="{i18n>PurchaseOrder}"
                                    id="purchase_order"
                                >
                                    <content>
                                        <FlexBox class="sales_order_content">
                                            <items>
                                                <GenericTile
                                                    class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
                                                    header="{i18n>Completed}"
                                                    press="onClickTile($event, 'purchase', 'Completed')"
                                                    frameType="OneByHalf"
                                                >
                                                    <TileContent
                                                        footer="{i18n>Total-40}"
                                                    />
                                                </GenericTile>
                                                <GenericTile
                                                    class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
                                                    header="{i18n>Inprogress}"
                                                    press="onClickTile($event, 'purchase', 'Inprogress')"
                                                    frameType="OneByHalf"
                                                >
                                                    <TileContent
                                                        footer="{i18n>Total-50}"
                                                    />
                                                </GenericTile>
                                                <GenericTile
                                                    class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
                                                    header="{i18n>Blocked}"
                                                    press="onClickTile($event, 'purchase', 'Blocked')"
                                                    frameType="OneByHalf"
                                                >
                                                    <TileContent
                                                        footer="{i18n>Total-60}"
                                                    />
                                                </GenericTile>
                                            </items>
                                        </FlexBox>
                                    </content>
                                </TabContainerItem>
                            </items>
                        </TabContainer>
                    </VBox>
                    <VBox
                        width="30%"
                        height="100%"
                        class="alert_box"
                    >
                        <!-- Alert List -->
                        <List
                            headerText="{i18n>Top5Alerts}"
                            mode="SingleSelectMaster"
                        >
                            <items>
                                <!-- Define your top 5 alerts here -->
                                <StandardListItem title="{i18n>Alert1}" />
                                <StandardListItem title="{i18n>Alert2}" />
                                <StandardListItem title="{i18n>Alert3}" />
                                <StandardListItem title="{i18n>Alert4}" />
                                <StandardListItem title="{i18n>Alert5}" />
                            </items>
                        </List>
                        <!-- View All Button -->
                        <Button
                            text="{i18n>ViewAll}"
                            class="view_all_btn"
                            press="onPressViewAll"
                        />
                    </VBox>
                </items>
            </FlexBox>
        </content>
    </Page>
</mvc:View>